---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, "");
const inPage = isActive ? "#" : href;

const style =
  "inline-bloc text-lg " +
  (isActive
    ? "font-bold text-violet-900 dark:text-violet-300"
    : "hover:text-violet-800 dark:hover:text-violet-300 transition-[var(--default-transition)]");
---

<a href={inPage} class:list={[className, style]} {...props}>
  <slot />
</a>
